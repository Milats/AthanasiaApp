<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderDetailsActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewOrderInfoID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textViewOrderInfoUserClient"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewOrderInfoDate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewOrderInfoTotal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_height"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textViewOrderInfoTotalIVA"
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_height"
            android:layout_weight="1"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listViewOrderDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>