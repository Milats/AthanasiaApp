<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/shopItemImageView"
        android:layout_width="@dimen/image_side_length"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/product_image_description"
        android:scaleType="fitCenter"/>
    <androidx.gridlayout.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        app:rowCount="3"
        app:columnCount="3"
        app:useDefaultMargins="true">
        <TextView
            android:id="@+id/shopItemNameTextView"
            app:layout_row="0"
            app:layout_columnSpan="3"
            app:layout_rowWeight="1"/>

        <TextView
            android:id="@+id/shopItemUnitPriceTextView"
            app:layout_row="1"
            app:layout_columnSpan="3"
            app:layout_rowWeight="1"/>
        <Button
            android:id="@+id/btnPlusQty"
            android:text="-"
            app:layout_row="2"
            app:layout_column="0"
            app:layout_columnWeight="1"/>
        <TextView
            android:id="@+id/shopItemQtyTextView"
            android:text="0"
            app:layout_row="2"
            app:layout_column="1"
            app:layout_columnWeight="3"/>
        <Button
            android:id="@+id/btnMinusQty"
            android:text="+"
            app:layout_row="2"
            app:layout_column="2"
            app:layout_columnWeight="1"/>
    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>